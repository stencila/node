{
  "name": "stencila-node",
  "version": "0.28.13",
  "description": "Stencila for Node.js",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "bin": {
    "stencila-node": "bin/stencila-node.js"
  },
  "scripts": {
    "lint": "standard \"lib/**/*.js\" \"bin/**/*.js\" \"test/**/*.js\"",
    "check": "dependency-check ./package.json && dependency-check ./package.json --unused --no-dev --ignore-module request",
    "test": "tape test | tap-spec",
    "cover": "nyc --reporter=lcov --reporter=text npm test",
    "docs": "esdoc",
    "start": "nodemon bin/stencila-nodemon.js",
    "prepublishOnly": "npm run lint && npm run test && npm run check && npm run docs",
    "clean": "rimraf .nyc_output docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/node.git"
  },
  "keywords": [
    "data",
    "documents",
    "sheets",
    "contexts",
    "sessions",
    "reproducibility",
    "science"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/node/issues"
  },
  "homepage": "https://github.com/stencila/node#readme",
  "devDependencies": {
    "dependency-check": "^3.1.0",
    "esdoc": "^1.0.4",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "node-mocks-http": "^1.6.7",
    "nodemon": "^1.17.2",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.9.0"
  },
  "dependencies": {
    "acorn": "^5.5.3",
    "address": "^1.0.3",
    "astring": "^1.2.0",
    "better-sqlite3": "^4.1.0",
    "body": "^5.1.0",
    "doctrine": "^2.1.0",
    "execa": "^0.10.0",
    "get-stdin": "^6.0.0",
    "glob": "^7.1.2",
    "http-shutdown": "^1.2.0",
    "jmp": "^1.0.0",
    "jsonwebtoken": "^8.2.0",
    "kernelspecs": "^2.0.0",
    "mkdirp": "^0.5.1",
    "path-is-inside": "^1.0.2",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "rollup": "^0.57.1",
    "rollup-plugin-uglify": "^3.0.0",
    "send": "^0.15.4",
    "spawnteract": "^4.0.0",
    "sqlite-parser": "^1.0.1",
    "tmp": "0.0.33",
    "untildify": "^3.0.2",
    "uuid": "^3.2.1"
  },
  "esdoc": {
    "source": "./lib",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-node"
      }
    ]
  },
  "standard": {
    "ignore": [
      "test/**/fixtures/**/*.js"
    ]
  }
}
